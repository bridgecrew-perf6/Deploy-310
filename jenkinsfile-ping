pipeline {
  agent {label 'linux'}

  stages {
    stage('Ping') {
      steps {
        sh 'ansible-playbook plays/play-ping'
      }
    }
    stage('update and reboot') {
      steps {
        sh 'ansible-playbook plays/play-update'
      }
    }  
    stage('ntp') {
      steps {
        sh 'ansible-playbook plays/play-ntpd'
      }
    } 
  }
}