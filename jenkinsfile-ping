pipeline {
  agent {label 'linux'}

  stages {
    stage('Ping') {
      steps {
        sh 'ansible-playbook plays/play-ping'
      }
    }
    stage('update and reboot - webservers') {
      steps {
        sh 'ansible-playbook plays/play-update-webservers'
      }
    }       
    stage('ntp') {
      steps {
        sh 'ansible-playbook plays/play-ntpd'
      }
    } 
    stage('webservers') {
      steps {
        sh 'ansible-playbook plays/play-webservers'
      }
    }   
  }
}